.Drama_Rd_Top {
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
  position: relative;
  font-size: 27rpx;
}
.Drama_Rd_Top text {
  position: absolute;
  left: 20rpx;
}
.Drama_Rd_Content {
  display: flex;
  justify-content: space-between;
  width: 95%;
  padding: 0 20rpx;
}
.Drama_Rd_Content .Drama_Rd_Content_List {
  width: 220rpx;
  font-size: 23rpx;
  text-align: left;
}
.Drama_Rd_Content .Drama_Rd_Content_List image {
  width: 100%;
  height: 250rpx;
  margin-bottom: 10rpx;
}
.Drama_Rd_Content .Drama_Rd_Content_List .DR_Content_text {
  font-size: 21rpx;
  color: #d0d0d0;
  margin-top: 10rpx;
}
.Drama_Rd_refresh {
  width: 100%;
  padding: 20rpx 0;
  font-size: 25rpx;
  border-bottom: 1rpx solid #efbcd5b3;
}
.Drama_Rd_refresh image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.Drama_Rd_refresh text {
  margin-left: 5rpx;
  vertical-align: middle;
  color: red;
}
@keyframes Image_Refresh {
0% {
    transform: rotate(0deg);
}
100% {
    transform: rotate(360deg);
}
}
.Drama_Rd_refresh .refresh_img {
  animation: Image_Refresh linear 1s infinite;
}